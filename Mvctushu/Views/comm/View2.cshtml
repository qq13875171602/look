<script type="text/javascript">
    $(function () {
        $("#right").click(function () {
            $("#right").hide();
            $("#xia").show();
            $("#ceng4").show();
        });
        $("#xia").click(function () {
            $("#xia").hide();
            $("#right").show();
            $("#ceng4").hide();
        });
    });
</script>

